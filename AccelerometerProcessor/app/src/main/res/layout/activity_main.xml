<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ardic.android.iotignite.accelerometerprocessor.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/accelerometerTextX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.26"
                android:text="TextView" />

            <TextView
                android:id="@+id/accelerometerTextY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.17"
                android:text="TextView" />

            <TextView
                android:id="@+id/accelerometerTextZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5.98"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ProgressBar
                android:id="@+id/accelerometerProccesBarY"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="264dp"
                android:layout_centerInParent="true"
                android:max="200"
                android:progress="100"
                android:progressDrawable="@drawable/progress_drawable" />

            <ProgressBar
                android:id="@+id/accelerometerProccesBarZ"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:max="200"
                android:paddingLeft="100dp"
                android:progress="100"
                android:progressDrawable="@drawable/progress_drawable"
                android:rotation="45" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="1"
            tools:layout_editor_absoluteX="-72dp"
            tools:layout_editor_absoluteY="103dp">

            <ProgressBar
                android:id="@+id/accelerometerProccesBarX"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="237dp"
                android:layout_height="264dp"
                android:layout_centerInParent="true"
                android:max="200"
                android:paddingRight="200dp"
                android:progress="100"
                android:progressDrawable="@drawable/progress_drawable"
                android:rotation="90" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
